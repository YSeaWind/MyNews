<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv_new_photo_a"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_news_title_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_new_photo_a"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="title"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_news_category_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_news_title_a"
            android:layout_alignBottom="@id/iv_new_photo_a"
            android:text="腾讯体育" />

        <TextView
            android:id="@+id/tv_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_news_category_a"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="2020.04.05" />
    </RelativeLayout>

    <View
        android:layout_below="@id/rl_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:background="#e3e3e3"
        android:layout_marginTop="5dp"
        android:layout_height="1dp" />
</RelativeLayout>
